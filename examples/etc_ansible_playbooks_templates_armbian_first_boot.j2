# Armbian First Boot Config File
# This file was generated by https://github.com/clueboard/ansible_af

# Network Settings
PRESET_NET_CHANGE_DEFAULTS="1"

## Ethernet
PRESET_NET_ETHERNET_ENABLED="1"

## WiFi
#PRESET_NET_WIFI_ENABLED="1"
#PRESET_NET_WIFI_SSID="MySSID"
#PRESET_NET_WIFI_KEY="MyWiFiKEY"
#PRESET_NET_WIFI_COUNTRYCODE="US"
#PRESET_CONNECT_WIRELESS="n"
## Static IP
PRESET_NET_USE_STATIC="1"
PRESET_NET_STATIC_IP="{{ ethernet_ip }}"
PRESET_NET_STATIC_MASK="{{ ethernet_netmask }}"
PRESET_NET_STATIC_GATEWAY="{{ ethernet_gw }}"
PRESET_NET_STATIC_DNS="{{ ' '.join(ethernet_dns) }}"

# System
SET_LANG_BASED_ON_LOCATION="y"
PRESET_LOCALE="en_US.UTF-8"
PRESET_TIMEZONE="Etc/UTC"

# Root
PRESET_ROOT_KEY="<SSH_KEY_GOES_HERE>"

# User
PRESET_USER_NAME="armbian"
PRESET_USER_KEY="<SSH_KEY_GOES_HERE>"
PRESET_DEFAULT_REALNAME="Armbian"
PRESET_USER_SHELL="bash"
